<!--Only admins can edit requests.-->
<h2>Edit Request</h2>

 <div class="row">
   <div class="col-md-8">
     <p>Make changes to this request for <%= current_user.name %>.</p>

     <%= form_for [@request.user, @request] do |f| %>
       <% if @request.errors.any? %>
         <div class="alert alert-danger">
           <h4><%= pluralize(@request.errors.count, "error") %>.</h4>
           <ul>
             <% @request.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
           </ul>
         </div>
       <% end %>

       <div class="form-group">
         <%= f.label :amount_requested %>
         <%= f.number_field :amount_requested, autofocus: true, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.label :amount_paid %>
         <%= f.number_field :amount_paid, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.label :date_processed %>
         <%= f.date_field :date_processed, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.label :processing_status %>
         <%= f.text_field :processing_status, class: 'form-control', placeholder: "Processed, In Progress, Incomplete" %>
       </div>
       <div class="form-group">
         <%= f.label :notes %>
         <%= f.text_field :notes, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.label :request_approved %>
         <%= f.check_box :request_approved, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.label :documents_submitted %>
         <%= f.check_box :documents_submitted, class: 'form-control' %>
       </div>
       <div class="form-group">
         <%= f.submit "Save Changes", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
</div>
